@model IEnumerable<Web_TCO.Models.Bid>
@{ 
    Layout = null;
}

<html lang='ru'>

<head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='Css\style.css' />
    <link rel='stylesheet' href='Css\normalize.css' />
</head>

<body>
    <div class='content'>
        <table class='content-table'>
            <tbody>
                <tr class='table-title'>
                    <th>Дата</th>
                    <th>Ауд</th>
                    <th>Установленно</th>
                    <th>Забрали</th>
                    <th>Установили</th>
                    <th>Забрали</th>
                    <th>Оборудование</th>
                    <th>Преподователь</th>
                </tr>
                @foreach (var bid in Model)
                {
                    <tr class='table-li'><td>@bid.Date</td><td>@bid.Aud</td><td>@bid.Put.ToString()</td><td>@bid.Take.ToString()</td><td>@bid.Date_Put</td><td>@bid.Date_Take</td><td>@bid.Obor</td><td>@bid.Prepod</td></tr>
                }
            </tbody>
        </table>
        <form method="post">
            <p>Дата</p>
            <input type="text" name="PostDate" />
            <input type="submit" value="Отправить" />
        </form>
        <form method="post">
            <input type="hidden" value="@DateTime.Now" name="Date" />
            <input type="hidden" value="@false" name="Put" />
            <input type="hidden" value="@false" name="Take" />
            <table>
                <tr>
                    <td>Аудитория</td>
                    <td><input type="text" name="Aud"/> </td>
                </tr>
                <tr>
                    <td>Время установки</td>
                    <td><input type="text" name="Date_Put"/> </td>
                </tr>
                <tr>
                    <td>Время окончания</td>
                    <td><input type="text" name="Date_Take"/> </td>
                </tr>
                <tr>
                    <td>Оборудование</td>
                    <td><input type="text" name="Obor"/> </td>
                </tr>
                <tr>
                    <td>Преподаватель</td>
                    <td><input type="text" name="Prepod"/></td>
                </tr>
                <tr><td><input type="submit" value="Отправить"/></td></tr>
            </table>
        </form>
    </div>
</body>

</html>
